@prefix dash: <http://datashapes.org/dash#> .
@prefix ex: <http://example.com/ns#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix cert: <http://www.w3.org/ns/auth/cert#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/>
@prefix dbo: <http://dbpedia.org/ontology/>


<#WebIdShape>
    a sh:NodeShape ;
    sh:targetClass foaf:PersonalProfileDocument ;
    sh:property [                 
        sh:path foaf:maker ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path foaf:primaryTopic ;
        sh:minCount 1;
        sh:maxCount 1;
    ] .
    
<#PersonShape>
    a sh:NodeShape ;
    sh:targetClass foaf:Person ;
    sh:property <#name-violation> ;
    sh:property <#key-violation> ;
    sh:property <#dbpedia-support-info> .

<#name-violation>               
        sh:path foaf:name ;
        sh:minCount 1 ;
        sh:maxCount 1 .

<#key-violation> 
        sh:path cert:key ;
        sh:minCount 1 .

<#dbpedia-support-info>  
        sh:path rdf:type ;
        sh:hasValue dbo:DBpedian ;
        sh:severity sh:Info ;
        sh:resultMessage "to be included in the WOF, we require that you show your support to DBpedia by addinga dbo:DBpedian to your URI." .


ex:KeyShape
    a sh:NodeShape ;
    sh:targetClass cert:RSAPublicKey ;
    sh:property [
        sh:path rdf:label ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;  
    sh:property [
        sh:path cert:modulus ;
        sh:minCount 1;
        sh:maxCount 1;
        sh:dataType xsd:hexBinary ;
    ] ;
    sh:property [
        sh:path cert:exponent ;
        sh:minCount 1;
        sh:maxCount 1;
        sh:dataType xsd:nonNegativeInteger ;
    ] .
